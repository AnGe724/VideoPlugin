<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                    android:startColor="#FF768891"
                    android:centerColor="#FF768891"
                    android:centerY="1.0"
                    android:endColor="#FF768891"
                    android:angle="270"
                    />
            <corners
                    android:radius="50dp" />
            <padding
                    android:left="20dp"
                    android:top="20dp"
                    android:right="20dp"
                    android:bottom="20dp" />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                        android:startColor="#FF0CE7D4"
                        android:centerColor="#FF0CE7D4"
                        android:centerY="1.0"
                        android:endColor="#FF0CE7D4"
                        android:angle="270"
                        />
                <corners
                        android:radius="50dp" />
                <padding
                        android:left="20dp"
                        android:top="20dp"
                        android:right="20dp"
                        android:bottom="20dp" />
            </shape>
        </clip>
    </item>

</layer-list>